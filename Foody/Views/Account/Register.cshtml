                        <div class="col-xs-6 col-sm-3">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                        <div class="col-xs-6 col-sm-3">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-default">Back</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

